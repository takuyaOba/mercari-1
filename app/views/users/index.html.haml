.select-content
  .select-content__header
    .select-content__header__image-logo-login
      = link_to root_path do
        = image_tag 'header_icon.png',id:"image-style-header-logo"
  .select-content__main

    .select-content__main__top
      %h2.select-content__main__top 新規会員登録
    .select-content__main__body  
      .select-content__main__body__content
        = link_to "メールアドレスで登録", signup_registration_path,class:"select-content__main__body__content-email"

      .select-content__main__body__content
        = link_to new_user_session_path do
          =image_tag 'login/facebook.png',id:"image-style-logo"
      .select-content__main__body__content
        = link_to new_user_session_path do
          =image_tag 'login/google.png',id:"image-style-logo"  


  .select-content__footer
    %ul.select-content__footer__ul
      %li.select-content__footer__li
        = link_to 'プライバシーポリシー', "https://www.mercari.com/jp/privacy/"
      %li.select-content__footer__li
        = link_to 'メルカリ利用規約', "https://www.mercari.com/jp/tos/"
      %li.select-content__footer__li
        = link_to '特定商取引に関する表記', "https://www.mercari.com/jp/tokutei/"
    = link_to root_path, class: "login-content__footer__logo" do
      = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?1076135930",id:"image-style-footer-logo"
    %p
    %small.select-content__footer__name © 2019 Mercari