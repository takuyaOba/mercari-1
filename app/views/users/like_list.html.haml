-# パンくずの表示にて必要
-breadcrumb :like_list, @user
%header
  = render "toppage/header"
%main.mypage
  = render "mypage"
  .like
    .like__list
      %h2.like__list__heading
        いいね！一覧
      - if @likes.present?
        %ul#mypage-tab-notification.mypage-item-list.tab-pane.active
          %li.list
            - @items.each do |item|
              = link_to root_path, class: "mypage-item-link" do
                %figure
                  - item.item_images.each do |image|
                    = image_tag image.image.url.first, class: "lazyloaded"
                .mypage-item-body
                  .mypage-item-text
                    = item.name
                  .money
                    .en
                      ¥
                    %span 
                      = item.price
                %i.material-icons.right keyboard_arrow_right
      - else
        %ul#mypage-tab-transaction-now.mypage-item-list.tab-pane.active
          = image_tag "images.png", class: "image"
          %li.mypage-item-not-found.bold いいね！がありません
    %ul.like__page
      %li.like__page__left
        = link_to root_path, class: "like__page__left__btn" do
          %i.material-icons.left keyboard_arrow_left
      %li.like__page__right
        = link_to root_path, class: "like__page__right__btn" do
          %i.material-icons.right keyboard_arrow_right
%aside
  = render "toppage/aside"
%footer
  = render "toppage/footer"
