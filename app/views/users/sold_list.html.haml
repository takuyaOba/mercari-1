%header
  = render "toppage/header"
%main.mypage
  = render "mypage"
  .sold
    .sold__list
      %h2.sold__list__heading
        出品した商品
      %ul.sold__list__tab
        %li.noactive
          %h3
            = link_to root_path do
              出品中
        %li.noactive
          %h3
            = link_to root_path do
              取引中
        %li.active
          %h3.linered
            = link_to root_path do
              売却済み
      .sold__list__one
        %ul#mypage-tab-notification.mypage-item-list.tab-pane.active
          %li.list
            = link_to root_path, class: "mypage-item-link" do
              %figure
                = image_tag "mercari_icon.png", class: "lazyloaded"
              .mypage-item-body
                .mypage-item-text 取引中の商品
                .state
                  .state__sold
                    売却済
              %i.material-icons.right keyboard_arrow_right
-# 売却済み商品がない場合
