%header
  = render "toppage/header"
%main.mypage
  = render "users/mypage"
  .exhibition
    .exhibition__list
      %h2.exhibition__list__heading
        出品した商品
      %ul.exhibition__list__tab
        %li.active
          %h3.linered
            = link_to root_path do
              出品中
        %li.noactive
          %h3
            = link_to root_path do
              取引中
        %li.noactive
          %h3
            = link_to root_path do
              売却済み
      .exhibition__list__one
        %ul#mypage-tab-notification.mypage-item-list.tab-pane.active
          - @items.each do |item|
            %li.list
              = link_to edit_item_path(item), class: "mypage-item-link" do
                %figure
                  - item.item_images.each do |image| 
                    = image_tag image.image.url, class: "lazyloaded"
                .mypage-item-body
                  = item.name
                  .state
                    %i.far.fa-heart
                      %span 1
                    %i.far.fa-comment-alt
                      %span 1
                    .state__name
                      出品中
                %i.material-icons.right keyboard_arrow_right
%aside
  = render "toppage/aside"
%footer
  = render "toppage/footer"
