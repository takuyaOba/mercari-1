%li.list
  = link_to edit_item_path(item), class: "mypage-item-link" do
    %figure
      - item.item_images.each do |image| 
        = image_tag image.image.url, class: "lazyloaded"
    .mypage-item-body
      = item.name
      .state
        %i.far.fa-heart
          %span 1
        %i.far.fa-comment-alt
          %span 1
        .state__name
          出品中
    %i.material-icons.right keyboard_arrow_right